
<div class="header">
<h1>Welcome to The Babaali PhotoBlog<img src='http://cdn.trendhunterstatic.com/thumbs/cloudfactory1.jpeg'></h1>
</div>


<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.picture %></td>
        <td><%= link_to 'Show', post%></td>
        <td><%= link_to 'Edit', edit_post_path(idea)%></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

