
<h1 style="text-align:center;margin:auto"> Welcome to PhotoBlog</h1><br>
<div align='center' class='image'>
	<img src ="cloudfactory1.jpeg">
</div>
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>

      <th>Picture</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
   </thead>

   <tbody>
   	<% @posts.each do |post|%>
   	<tr>
   	<td><%= (post.picture_url || 'untitled').to_s.split('/').last %></td>
   	<td><%= post.category.try(:name) ||'-' %></td>
   	<td><%= link_to 'Show',post, class:'btn btn-mini btn-success' %></td>
   	<td><%= link_to 'Destroy', post, method: :delete, class:'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
   	</tr>	
   	<% end %>



   </tbody>

 
</table>
</div>
</div>
<br>
<div class='btn_holder'>
	<%= link_to 'Add Photos', new_post_path, class:'btn btn-mini btn-info' %>
</div>