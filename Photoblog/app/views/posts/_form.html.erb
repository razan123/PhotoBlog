<%= form_for @post, :html => {:multipart => true} do |f| %>
  
  <div class="upload">
  <div class="category">
  <%=f.label :category%>
  <%= f.collection_select :category_id, Category.all, :id, :name, :include_blank => false
  %>
  </div>
  <br>
  <div class="field">
     <%= f.file_field :picture %>
 </div>
 <br>
 <div class="actions">
   <%= f.submit "Upload Photo",  class: 'btn btn-mini btn-success' %>
 </div>
 </br>

<%= link_to 'Back', posts_path , class: 'btn btn-mini btn-warning'%>
 </div>
<% end %> 
 